<Page x:Class="FisioLogicV2.Pages.Pacientes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FisioLogicV2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="865" d:DesignWidth="1250"
      Title="Pacientes" Background="#32e2d0">

    <Grid>
        <Border BorderBrush="#fff" Background="#fff" BorderThickness="15" CornerRadius="10"/>


        <DataGrid x:Name="dgPacientes" Margin="20,75,384,70" AlternatingRowBackground="LightBlue" AlternationCount="2"
          AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdPaciente}" Width="40"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="100"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="180" />
                <DataGridTextColumn Header="Direccion" Binding="{Binding Direccion}" Width="200"/>
                <DataGridTextColumn Header="Ciudad" Binding="{Binding Ciudad}" Width="100"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" Width="110"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="170" />

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Ficha Paciente" Margin="890,160,20,650" FontSize="16" FontWeight="Bold"/>
        <StackPanel Height="450" x:Name="stack_pac" Margin="890,180,20,200" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}">
            <Grid Height="450">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="120*"/>
                    <ColumnDefinition Width="85*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Nombre" Grid.Row="1" Grid.Column="0" FontWeight="Bold" FontSize="16" Margin="-1,5,5,5" VerticalAlignment="Center"/>
                <Label Content="Apellidos" Grid.Row="2" Grid.Column="0" FontWeight="Bold" FontSize="16" Margin="-1,5,5,5" VerticalAlignment="Center"/>
                <Label Content="Direccion" Grid.Row="3" Grid.Column="0" FontWeight="Bold" FontSize="16" Margin="-1,5,5,5" VerticalAlignment="Center"/>
                <Label Content="Ciudad" Grid.Row="4" Grid.Column="0" FontWeight="Bold" FontSize="16" Margin="-1,5,5,5" VerticalAlignment="Center"/>
                <Label Content="Telefono" Grid.Row="5" Grid.Column="0" FontWeight="Bold" FontSize="16" Margin="-1,5,5,5" VerticalAlignment="Center"/>
                <Label Content="Edad" Grid.Row="6" Grid.Column="0" FontWeight="Bold" FontSize="16" Margin="-1,5,5,5" VerticalAlignment="Center"/>
                <Label Content="Email" Grid.Row="7" Grid.Column="0" FontWeight="Bold" FontSize="16" Margin="-1,5,5,5" VerticalAlignment="Center"/>
                <TextBox x:Name="anadir_nombre_pac" TextWrapping="Wrap" Text="" Grid.Column="1"  Grid.Row="1" Visibility="Hidden"/>
                <TextBox x:Name="anadir_apellido_pac" TextWrapping="Wrap" Text="" Grid.Column="1" Grid.Row="2" Visibility="Hidden"/>
                <TextBox x:Name="anadir_direccion_pac" TextWrapping="Wrap" Text="" Grid.Column="1" Grid.Row="3" Visibility="Hidden"/>
                <TextBox x:Name="anadir_ciudad_pac" TextWrapping="Wrap" Text="" Grid.Column="1" Grid.Row="4" Visibility="Hidden"/>
                <TextBox x:Name="anadir_telefono_pac" TextWrapping="Wrap" Text="" Grid.Column="1" Grid.Row="5" Visibility="Hidden"/>
                <TextBox x:Name="anadir_edad_pac" TextWrapping="Wrap" Text="" Grid.Column="1" Grid.Row="6" Visibility="Hidden"/>
                <TextBox x:Name="anadir_email_pac" TextWrapping="Wrap" Text="" Grid.Column="1" Grid.Row="7" Visibility="Hidden"/>
            </Grid>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Margin="140,805,500,25" Width="500">
            <Button x:Name="btn_anadir_pac" Width="128" ToolTip="Añadir un paciente" HorizontalAlignment="Left" Height="37" VerticalAlignment="Center" Click="btn_anadir_pac_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Assets/agregar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Añadir" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="btn_modificar_pac" Width="128" Margin="0,-40,1,1" ToolTip="Modificar un paciente" HorizontalAlignment="Center" Height="37" VerticalAlignment="Center" IsEnabled="False" Click="btn_modificar_pac_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Assets/editar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Modificar" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="btn_eliminar_pac" Width="128" Margin="0,-40,1,1" ToolTip="Eliminar un paciente" HorizontalAlignment="Right" Height="37" IsEnabled="False" Click="btn_eliminar_pac_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Assets//eliminar.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Eliminar" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Border BorderBrush="#2d2d2d" BorderThickness="10" CornerRadius="8" Margin="16,20,16,800">
            <Label Content="Pacientes" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#2d2d2d" Foreground="#fff" Height="45" Width="1200" FontSize="18" FontWeight="Bold" FontFamily="Leelawadee UI" Padding="0,0,0,0" ScrollViewer.CanContentScroll="True" VerticalContentAlignment="Center"/>
        </Border>


    </Grid>
</Page>
